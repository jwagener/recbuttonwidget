RecButton provides the flash audio recording and SoundCloud uploading functionality through a simple JavaScript API.

<html>
<body onload="init()">
  <script  src="RecButton/RecButton.js"></script>
  
  <script>
    function init(){
      RecButton.setup({
        flashContainer: document.getElementById("recorder")
      })
    }
    
    function upload(){
      RecButton.upload({
        url: "https://api.soundcloud.com/tracks?oauth_token=dsfsdf"
        params: {
          "track[title]": "your track title"
        }
      });
      
      // upload finished
      
    }
  </script>
  <div id="recorder"></div>
  <a href="#" onclick="RecButton.record()">Record</a>
  <a href="#" onclick="RecButton.play()">Play</a>
  <a href="#" onclick="RecButton.stop()">Stop</a>
  <a href="#" onclick="upload()">Upload</a>


</body>
</html>